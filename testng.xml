<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="CrossBrowser Test Suite" parallel="tests" thread-count="2" data-provider-thread-count="2">
    <test name = "ChromeTest" verbose="2">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.lumatest.test.NavigationTest"></class>
        </classes>
    </test>

    <test name = "FirefoxTest" verbose="2">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.lumatest.test.NavigationTest"></class>
        </classes>
    </test>

</suite>